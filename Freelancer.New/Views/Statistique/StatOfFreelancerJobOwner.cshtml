@model Freelancer.Domain.statistique
@Scripts.Render("~/Scripts/Chart.js")
@{
    ViewBag.Title = "StatOfFreelancerJobOwner";
}

@using Freelancer.Data.Models

<div class="col-lg-12">
    <h1 class="page-header">
        Statistics Of Donation
        <small>...</small>
    </h1>
</div>
<br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
<center style=" float:none; margin-top:-25% ">
    <div style="width: 50%">
       
        <canvas id="canvas" height="450" width="600"></canvas>
    </div>
</center>
<script>


    var barChartData = {
        labels: [


                     "Nbr freelancer", "Nbr job owner"



        ],
        datasets: [
			{
			    fillColor: "rgba(220,220,220,0.5)",
			    strokeColor: "rgba(520,220,220,0.8)",
			    highlightFill: "rgba(220,230,220,0.75)",

			    data: [



                         "@Html.DisplayFor(model => model.nbrFreelancer)",
                         "@Html.DisplayFor(model => model.nbrJobOwner)"



			    ]
			},

        ]

    }
    window.onload = function () {
        var ctx = document.getElementById("canvas").getContext("2d");
        window.myBar = new Chart(ctx).Bar(barChartData, {
            responsive: true
        });
    }

</script>
